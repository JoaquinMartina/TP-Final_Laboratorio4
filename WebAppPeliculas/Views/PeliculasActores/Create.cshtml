@model WebAppPeliculas.Models.PeliculaActor

@{
    ViewData["Title"] = "Create";
}

<div>
    <a class="btn btn-info" asp-action="Index">Listado de Actores</a>
</div><br />

<h1>Crear</h1>

<h4>Película - Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PeliculaId" class="control-label"></label>
                <select asp-for="PeliculaId" class ="form-control" asp-items="ViewBag.PeliculaId">
                    <option value="">Todas</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PersonaId" class="control-label"></label>
                <select asp-for="PersonaId" class ="form-control" asp-items="ViewBag.PersonaId">
                    <option value="">Todos</option> 
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PapelActor" class="control-label"></label>
                <input asp-for="PapelActor" class="form-control" />
                <span asp-validation-for="PapelActor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Cancelar</a>
</div>

