@model WebAppPeliculas.Models.PeliculaGenero

@{
    ViewData["Title"] = "Genero Peliculas";
}

<h1>Agregar</h1>

<h4>Género - Película</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PeliculaId" class="control-label"></label>
                <select asp-for="PeliculaId" class ="form-control" asp-items="ViewBag.PeliculaId">
                    <option value="">Todas</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GeneroId" class="control-label"></label>
                <select asp-for="GeneroId" class ="form-control" asp-items="ViewBag.GeneroId">
                    <option value="">Todos</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Generos" asp-action="Index">Regresar</a>
</div>

