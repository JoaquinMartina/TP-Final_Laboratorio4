@model WebAppPeliculas.ViewModel.PersonaViewModel

@{
    ViewData["Title"] = "Personas";
}

<h1>Personas</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Agregar Persona</a>
</p>

<!-- Paginacion (Transformada a componente)-->
<partial name="_Paginador" for="@Model.Paginador" />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Acciones
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas[0].FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas[0].FotoCarnet)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Personas)
        {
        <tr>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoCarnet)
            </td>
        </tr>
        }
    </tbody>
</table>
